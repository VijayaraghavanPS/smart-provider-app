/* src/App.css */
.container {
  font-family: Arial, sans-serif;
  margin: 20px;
  padding: 20px;
  border: 1px solid #ccc;
  border-radius: 8px;
  background-color: #f9f9f9;
  max-width: 600px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

h4 {
  margin-bottom: 20px;
  font-size: 24px;
  color: #333;
}

.patient-info {
  font-size: 16px;
  line-height: 1.5;
}

.patient-details div {
  margin-bottom: 10px;
}

.error {
  color: red;
  font-weight: bold;
}

.loading {
  font-size: 18px;
  color: #555;
}

strong {
  color: #555;
}
